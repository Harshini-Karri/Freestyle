<mvc:View controllerName="com.ust.purchaseorders.controller.POItem"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page title="PO Items">
        <content>
            <Table items="{path : '/poitem'}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="PO Items" level="H2"/>
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column><Text text="PO ID"/></Column>
                    <Column><Text text="lineitemnumber"/></Column>
                    <Column><Text text="mat_id"/></Column>
                    <Column><Text text="materials"/></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{po_id}"/>
                            <Text text="{po_lineitem_number}"/>
                            <Text text="{po_item_material_id}"/>
                            <Text text="{ po_item_materials }"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
